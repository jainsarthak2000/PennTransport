<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gradient"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="511dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="146dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/bus" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Welcome to PENNTRANSPORT!"
            android:textColor="@color/colorInputL"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/usernameText"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textbox_back"
            android:drawableLeft="@drawable/ic_person_outline_white_24dp"
            android:hint="  Email"
            android:padding="5dp"
            android:textColor="@color/colorInputL"
            android:textColorHint="@color/colorHintL"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textbox_back"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:hint="  Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/colorInputL"
            android:textColorHint="@color/colorHintL"
            android:textSize="22sp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginbutton_back"
            android:text="LOGIN"
            android:onClick="onLoginButtonClick"
            android:textColor="@color/colorInputL"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textview_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Register Here"
            android:onClick="onRegisterButtonClick"
            android:clickable="true"
            android:textColor="@color/colorInputL"
            android:textSize="22sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>