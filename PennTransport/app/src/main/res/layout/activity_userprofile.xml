<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gradient"
    tools:context=".UserProfileActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="511dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="146dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/welcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Welcome!"
            android:textColor="@color/colorInputL"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/nameUser"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textbox_back"
            android:text="Name:"
            android:padding="10dp"
            android:textColor="@color/colorInputL"
            android:textColorHint="@color/colorHintL"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/usernameUser"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/textbox_back"
            android:text="Email id:"
            android:padding="10dp"
            android:textColor="@color/colorInputL"
            android:textColorHint="@color/colorHintL"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/phoneNumberUser"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/textbox_back"
            android:text="Phone Number:"
            android:padding="10dp"
            android:textColor="@color/colorInputL"
            android:textColorHint="@color/colorHintL"
            android:textSize="20sp"  />

        <TextView
            android:id="@+id/emergencyNumberUser"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/textbox_back"
            android:text="Emergency Number:"
            android:padding="10dp"
            android:textColor="@color/colorInputL"
            android:textColorHint="@color/colorHintL"
            android:textSize="20sp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/loginbutton_back"
            android:text="Logout"
            android:onClick="onLogoutButtonClick"
            android:textColor="@color/colorInputL"
            android:textSize="22sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>